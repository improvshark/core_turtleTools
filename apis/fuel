function check()
  return turtle.getFuelLevel()
end

local function getFuel()
  turtle.select(1)
  for i=1, 16 do
    turtle.select(i)
    if turtle.refuel(1) then return true end
  end
  return false
end

function menu() 
  
  print ("no Fuel left!")
  print ("a. continue")
  print ("b. exit")

  do
    input = io.read()
    while input ~= 'a' do
      if input == 'b' then
        return false;
      else
        print ("bad input? try again")
      end
      input = io.read()
    end
    return true;
  end

end

function useAllFuel()
  for i=1, 16 do
    turtle.select(i)
    if i ~= 16 then
      turtle.refuel()
    else
      if turtle.getItemCount(i) > 0 then
        turtle.refuel(turtle.getItemCount(i)-1)
      end
    end
  end
end

function reFuel()
  while turtle.getFuelLevel() == 0 do
    getFuel()
    if turtle.getFuelLevel() == 0 then
      if menu() == false then return end    
    end
  end
  return 1;
end

