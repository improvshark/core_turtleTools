

function place()
  slot = 2
  turtle.select(slot)
  fuel.reFuel()
  if turtle.detectDown() == false then
    while turtle.getItemCount(slot) == 0 or turtle.compareTo(16) == true do
      slot = slot + 1
      if slot >= 16 then slot = 2 end
      turtle.select(slot)
    end
    print ("placing block")
    turtle.placeDown()
  end
end

function dig()
  turtle.select(1)
  while turtle.compare() == true do
    turtle.dig()
    os.sleep(.5)
  end
  turtle.dig()
end
function digUp()
  if turtle.detectUp() then
    turtle.digUp()
  end
end
function digDown()
  if turtle.detectDown() then
    turtle.digDown()
  end
end

function stairUp()
  print (" how big of a stair case? ")
  local depth = io.read()

  for i=1, depth do
    fuel.reFuel()
    place()
    digUp()
    turtle.up()
    digUp()
    dig()
    turtle.forward()
  end
end

function stairDown()
  print (" how big of a stair case? ")
  local depth = io.read()

  for i=1, depth do
    fuel.reFuel()
    dig()
    turtle.forward()
    digUp()
    dig()
    digDown()
    turtle.down()
    place()
  end
end

function oldStair()

  for i=1, depth do
    fuel.reFuel()
    dig()
    digUp()
    turtle.forward()
    place()
    dig()
    digUp()
    turtle.forward()
    dig()
    turtle.forward()
    digUp()
    turtle.back()
    digDown()
    digUp()
    turtle.down()
    place()
  end

end


function main()
  print("what kind?")
  print("a. up")
  print("b. down")
  print("c. quit")
  
  input = io.read()
  print (input)
  while input ~= 'a' and input ~= 'b' and input ~= 'c'  do
      print ("bad input? try again")
      input = io.read()
      print (input)
  end

  if input == 'a' then
    stairUp()
  end

  if input == 'b' then
   stairDown()
  end

      
end

main()
